@{
    ViewBag.Title = "Diagnosis";
    var message = ViewBag.ErrorMessage as string;
}

<!-- Main content -->
<section class="content">
    <div class="error-page">

        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-warning"></i> @message</h3>

            <p>
                We could not find the pAge you were looking for.
                Meanwhile, you may <a asp-area="" asp-controller="Home" asp-action="Index">return to dashboard</a> or try using the search form.
            </p>

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search">

                    <div class="input-group-append">
                        <button type="submit" name="submit" class="btn btn-warning">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <!-- /.input-group -->
            </form>
        </div>
        <!-- /.error-content -->
    </div>
    <!-- /.error-pAge -->
</section>
