@using HealthMVC.Dto;
@model HealthMVC.Models.Diagnosis


@{
    ViewBag.Title = "Diagnosis";
    var doctors = ViewBag.Doctors as List<HealthMVC.Models.Doctor>;
    var personid = ViewBag.PersonId;
}

<h2>Diagnosis</h2>

<div>
    <h4>Issue Information: </h4>
    <p><strong>Issue Name:</strong> @Model.Issue.Name</p>
    <p><strong>Issue Accuracy:</strong> @Model.Issue.Accuracy</p>
</div>

<div>
    <h4>Specialisations</h4>
    <ul>
        @foreach (var specialisation in Model.Specialisation)
        {
            <li>@specialisation.Name</li>
        }
    </ul>
</div>
<div>
    <h3>Doctors</h3>
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
               @if (doctors != null)
                {
                    @foreach (var doc in doctors)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                            <div class="card bg-light d-flex flex-fill">
                                <div class="card-header text-muted border-bottom-0">
                                    @doc.Specialisation.Name
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">

                                           <h4 class="lead"><b> FirstName: @doc.FirstName</b></h4>
                                           <h4 class="lead"><b> LastName: @doc.LastName</b></h4>
                                            
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                               
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Contact #: + 800 - 12 12 23 52</li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a asp-action="BookAppointment" asp-route-doctorId="@doc.Id" asp-route-personId="@personid" class="btn btn-primary">
                                            Book Appointment
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <h3>No Doctor Available</h3>
                }
            </div>
        </div>
    </div>
   
</div>


